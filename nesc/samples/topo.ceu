@include(AM.m4)

@AM_retry(1s, @AM_start);
_DBG("Radio started\n");

define(N_NODES, 100)

int [N_NODES] nodes;

par/or do
    @AM_topology(nodes, N_NODES, 100ms);
with
    await 1s;
end

char[255] all;
for i=0, 99 do
    if nodes[i] then
        char[5] one;
        _sprintf(one, "%d ", i);
        _strcat(all, one);
    end
end
_DBG("%s\n", all);

return 0;
