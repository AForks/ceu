input int PIN02;

par do

    loop do
        int v = await PIN02;
        _digitalWrite(13, v);
    end

with

    async do
        _pinMode( 2, _INPUT);
        _pinMode(13, _OUTPUT);
        int pin2 = 0;

        loop do
            int tmp = _digitalRead(2);
            if (pin2 != tmp) then
                pin2 = tmp;
                emit PIN02=pin2;
            end
            _delay(10);
        end
    end
    await forever;

end
